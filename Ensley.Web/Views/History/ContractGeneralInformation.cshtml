@using System.Collections.Generic;

@{
  var contractId = ViewData["Id"].ToString();
}

<div id="contract-general-information-view-history-view">
  <div class="form-group">
    <div class="col-md-12">
      <ul class="nav nav-tabs history-tab" role="tablist">
        <li role="presentation" class="active">
          <a id="contract-details-history-tab" href="#contract-details-tab-content" aria-controls="vendor-history" role="tab" data-toggle="tab"><i class="far fa-address-card" aria-hidden="true"></i> Contract Details History</a>
        </li>
        <li role="presentation" id="contract-permission-history-item">
          <a id="contract-permission-history-tab" href="#contract-permission-history-tab-content" aria-controls="vendor-contacts" role="tab" data-toggle="tab"><i class="far fa-list-alt" aria-hidden="true"></i> Permission History </a>
        </li>

        <li role="presentation" id="contract-alert-history-item">
          <a id="contract-alert-history-tab" href="#contract-alert-history-tab-content" aria-controls="vendor-alerts" role="tab" data-toggle="tab"><i class="fas fa-exclamation" aria-hidden="true"></i> Alert History </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="tab-content">
            <div role="tabpanel" class='tab-pane active' id="contract-details-tab-content">
              <div id="contract-details-history-grid"></div>
            </div>

            <div role="tabpanel" class='tab-pane' id="contract-permission-history-tab-content">
              <div id="contract-permission-history-grid"></div>
            </div>

            <div role="tabpanel" class='tab-pane' id="contract-alert-history-tab-content">

              <div id="contract-alert-history-grid"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>

<script>
    $(document).ready(function () {
        var id = '@contractId';
       ContractGeneralInformationHistoryNS.InitializeControl(id);
    });  
</script>
 