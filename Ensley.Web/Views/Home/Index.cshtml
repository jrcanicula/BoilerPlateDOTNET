@{
  //var userId = ViewData["Id"].ToString();
  Layout = "~/Views/Shared/_Layout.cshtml";
  var image = ViewData["UserImage"].ToString();
  var name = ViewData["Name"].ToString();
  var entityId = ViewData["CompanyId"].ToString();
}

@using Ensley.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@*content for partial pages*@

<div class="container body">
  <div class="main_container">
    <div class="col-md-3 left_col">
      <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
        </div>
        <div class="clearfix"></div>
        <br>

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
          <div class="menu_section">
            <ul id="sidebar-ul" class="nav side-menu">
              <li class="dd-side active" id="dashboard">
                <a data-bind="" href="/#dashboard">
                  <i class="fab fa-trello"></i>
                  <span data-bind="">Dashboard</span>
                </a>
              </li>
              <li class="dd-side" id="documents">
                <a data-bind="" href="/#documents">
                  <i class="far fa-file-alt"></i>
                  <span data-bind="">Documents</span>
                </a>
              </li>
              <li class="dd-side" id="usermanagement">
                <a data-bind="" href="/#users">
                  <i class="far fa-user"></i>
                  <span data-bind="">User Management</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="top_nav">
      <div class="nav_menu">
        <nav>
          <a href="index.html" class="site_title">
            <span><img src="~/images/sam-logo.png"></span>
          </a>

          <center><img src="~/images/abc-logo.png" class="dcat-logo"></center>

          <ul class="nav navbar-nav navbar-right">
            <li class="" id="dd-parent">
              <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                @name &nbsp;<img id="display-picture" src="@image" alt="">
              </a>
              <ul class="dropdown-menu dropdown-usermenu pull-right">
                <li class="dd-side" id="profile"><a href="/#profile">My Profile</a></li>
                <li class="dd-side">
                  <a href="javascript:;">
                    <span class="badge bg-red pull-right">50%</span>
                    <span>Settings</span>
                  </a>
                </li>
                <li class="dd-side"><a href="javascript:;">Help</a></li>
                <li class="dd-side"><a href="/home/logoff"><i class="fas fa-sign-out-alt pull-right"></i> Log Out</a></li>
              </ul>
            </li>
            <li role="presentation" class="dropdown">
              <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
                <i class="far fa-bell"></i>
                <span class="badge bg-blue">2</span>
              </a>
              <ul class="dropdown-menu list-unstyled msg_list" role="menu">
                <li>
                  <a>
                    <span>
                      <span>Notification #1</span>
                      <span class="time">3 mins ago</span>
                    </span>
                    <span class="message">
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                    </span>
                  </a>
                </li>
                <li>
                  <a>
                    <span>
                      <span>Notification #2</span>
                      <span class="time">5 mins ago</span>
                    </span>
                    <span class="message">
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                    </span>
                  </a>
                </li>
                <li>
                  <div class="text-center">
                    <a>
                      <strong>See All Alerts</strong>
                      <i class="fa fa-angle-right"></i>
                    </a>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <!-- /top navigation -->
    <!-- page content -->
    <div class="right_col" role="main">
      <div class="clearfix"></div>
      <div>
        <div class="page-title">
          <div class="title_left">
            <div class="nav toggle">
              <a id="menu_toggle"><i class="fa fa-bars"></i></a>
            </div>
            <h3 id="page-title">Dashboard</h3>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="main-content-bg">
        <div id="contract-wizard"></div>
        <div id="main-content"></div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>



<script>

  var CurrentUserEntityId = '@entityId';

  $(document).ready(function () {
    $('.dd-side').each(function () {
      $(this).click(function (e) {
        $('#dd-parent').removeClass("open");
      });
    });
  });
</script>