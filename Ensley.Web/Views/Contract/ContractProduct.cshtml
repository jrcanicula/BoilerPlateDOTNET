@{
    var contractId = ViewData["ContractId"] == null ? null : ViewData["ContractId"].ToString();
    var isClient = ViewData["IsClient"] == null ? null : ViewData["IsClient"].ToString();
}

@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group">
                        <div id="product-div" class="form-inline">
                            <label>Product</label>
                            <select id="contractProduct-productMatrix" name="contractProduct-productMatrix" class="form-control" placeholder="Select Product" style="width: 300px; margin-right:5px"></select>
                            <button id="add-contractProduct" class="btn btn-primary" style="margin:14px 5px 10px 5px!important" type="button" onclick="ContractProductNS.addContractProduct()"><i class="fa fa-plus"></i> Add Product</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div id="contractProduct-grid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<script>
    $(document).ready(function () {
        var contractId = '@contractId';
        var isClient = '@isClient';
        ContractProductNS.init(contractId, isClient);
    });
</script>